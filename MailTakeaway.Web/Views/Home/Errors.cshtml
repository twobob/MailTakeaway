@model MailTakeaway.Core.Models.ParseStatistics
@{
    ViewData["Title"] = "Parse Errors";
}

<div class="container mt-4">
    <div class="mb-3">
        <a href="@Url.Action("Statistics")" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to Statistics</a>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Parse Errors (@Model.ParseErrors)</h4>
        </div>
        <div class="card-body">
            @if (Model.ParseErrorMessages.Any())
            {
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle"></i> These messages encountered errors during parsing. They may be malformed or use unsupported formats.
                </div>
                
                <div class="list-group">
                    @foreach (var error in Model.ParseErrorMessages)
                    {
                        <div class="list-group-item">
                            <i class="bi bi-x-circle text-danger"></i> @error
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle"></i> No parse errors recorded!
                </div>
            }
        </div>
    </div>
</div>
